{
    "SQL Version Header": {
        "prefix": "sql-version",
        "body": [
            "--",
            "-- VERSION ${1:1.0.0}",
            "--",
            "--",
            "-- VERSION     REQUEST NRO    USER            DATE             CHANGES",
            "-- ----------- -------------- --------------- ---------------- ----------------",
            "-- ${1:1.0.0}                      ${2:JMVELEZ}         ${3:2025-01-15}       ${4:INITIAL CREATION}",
            "-- ----------- -------------- --------------- ---------------- ----------------",
            "---",
            "--",
            "-- OBJECT TYPE: ${5:TABLE}",
            "-- OBJECT NAME: ${6:example_table}",
            "-- DESCRIPTION: ${7:Brief description of the object}",
            "--",
            "",
            "$0"
        ],
        "description": "SQL version header template for database objects"
    },
    "SQL Table Template": {
        "prefix": "sql-table",
        "body": [
            "--",
            "-- VERSION ${1:1.0.0}",
            "--",
            "--",
            "-- VERSION     REQUEST NRO    USER            DATE             CHANGES",
            "-- ----------- -------------- --------------- ---------------- ----------------",
            "-- ${1:1.0.0}                      ${2:JMVELEZ}         ${3:2025-01-15}       ${4:INITIAL CREATION}",
            "-- ----------- -------------- --------------- ---------------- ----------------",
            "---",
            "--",
            "-- OBJECT TYPE: TABLE",
            "-- OBJECT NAME: ${5:example_table}",
            "-- DESCRIPTION: ${6:Stores example data}",
            "--",
            "",
            "DROP TABLE IF EXISTS ${5:example_table};",
            "CREATE TABLE ${5:example_table} (",
            "    ${5:example_table}_id UUID DEFAULT GEN_RANDOM_UUID(),",
            "    ${7:name} VARCHAR(100) NOT NULL,",
            "    ${8:description} TEXT,",
            "    is_active BOOLEAN DEFAULT TRUE,",
            "    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,",
            "    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP",
            ");"
        ],
        "description": "Complete SQL table template with version header"
    },
    "SQL Constraints Template": {
        "prefix": "sql-constraints",
        "body": [
            "--",
            "-- VERSION ${1:1.0.0}",
            "--",
            "--",
            "-- VERSION     REQUEST NRO    USER            DATE             CHANGES",
            "-- ----------- -------------- --------------- ---------------- ----------------",
            "-- ${1:1.0.0}                      ${2:JMVELEZ}         ${3:2025-01-15}       ${4:INITIAL CREATION}",
            "-- ----------- -------------- --------------- ---------------- ----------------",
            "---",
            "--",
            "-- OBJECT TYPE: CONSTRAINTS",
            "-- OBJECT NAME: ${5:example_table}_constraints",
            "-- DESCRIPTION: Constraints for ${5:example_table} table",
            "--",
            "",
            "ALTER TABLE ${5:example_table} ADD CONSTRAINT pk_${5:example_table}_id PRIMARY KEY (${5:example_table}_id);",
            "ALTER TABLE ${5:example_table} ADD CONSTRAINT uq_${5:example_table}_${6:column} UNIQUE (${6:column});",
            "ALTER TABLE ${5:example_table} ADD CONSTRAINT ck_${5:example_table}_${7:column} CHECK (${7:column} IN ('${8:VALUE1}', '${9:VALUE2}'));"
        ],
        "description": "SQL constraints template with version header"
    },
    "SQL Indexes Template": {
        "prefix": "sql-indexes",
        "body": [
            "--",
            "-- VERSION ${1:1.0.0}",
            "--",
            "--",
            "-- VERSION     REQUEST NRO    USER            DATE             CHANGES",
            "-- ----------- -------------- --------------- ---------------- ----------------",
            "-- ${1:1.0.0}                      ${2:JMVELEZ}         ${3:2025-01-15}       ${4:INITIAL CREATION}",
            "-- ----------- -------------- --------------- ---------------- ----------------",
            "---",
            "--",
            "-- OBJECT TYPE: INDEXES",
            "-- OBJECT NAME: ${5:example_table}_indexes",
            "-- DESCRIPTION: Performance indexes for ${5:example_table} table",
            "--",
            "",
            "CREATE INDEX idx_${5:example_table}_${6:column} ON ${5:example_table}(${6:column});",
            "CREATE INDEX idx_${5:example_table}_${7:column} ON ${5:example_table}(${7:column});",
            "CREATE INDEX idx_${5:example_table}_active ON ${5:example_table}(is_active);"
        ],
        "description": "SQL indexes template with version header"
    },
    "SQL Foreign Key Template": {
        "prefix": "sql-fk",
        "body": [
            "ALTER TABLE ${1:table_name} ADD CONSTRAINT fk_${1:table_name}_${2:referenced_table} FOREIGN KEY (${2:referenced_table}_id) REFERENCES ${2:referenced_table}(${2:referenced_table}_id);"
        ],
        "description": "SQL foreign key constraint"
    },
    "SQL Insert Template": {
        "prefix": "sql-insert",
        "body": [
            "INSERT INTO ${1:table_name} (${2:column1}, ${3:column2}, ${4:column3}) VALUES",
            "('${5:value1}', '${6:value2}', '${7:value3}'),",
            "('${8:value4}', '${9:value5}', '${10:value6}');"
        ],
        "description": "SQL insert statement template"
    },
    "SQL Select Template": {
        "prefix": "sql-select",
        "body": [
            "SELECT ",
            "    ${1:column1},",
            "    ${2:column2},",
            "    ${3:column3}",
            "FROM ${4:table_name}",
            "WHERE ${5:condition} = '${6:value}'",
            "    AND is_active = TRUE",
            "ORDER BY ${7:column1};"
        ],
        "description": "SQL select statement template"
    },
    "SQL Update Template": {
        "prefix": "sql-update",
        "body": [
            "UPDATE ${1:table_name}",
            "SET ",
            "    ${2:column1} = '${3:value1}',",
            "    ${4:column2} = '${5:value2}',",
            "    updated_at = CURRENT_TIMESTAMP",
            "WHERE ${6:condition} = '${7:value}'",
            "    AND is_active = TRUE;"
        ],
        "description": "SQL update statement template"
    },
    "SQL Delete Template": {
        "prefix": "sql-delete",
        "body": [
            "UPDATE ${1:table_name}",
            "SET ",
            "    is_active = FALSE,",
            "    updated_at = CURRENT_TIMESTAMP",
            "WHERE ${2:condition} = '${3:value}';"
        ],
        "description": "SQL soft delete template"
    },
    "SQL Patch Template": {
        "prefix": "sql-patch",
        "body": [
            "--",
            "-- VERSION ${1:1.0.0}",
            "--",
            "--",
            "-- VERSION     REQUEST NRO    USER            DATE             CHANGES",
            "-- ----------- -------------- --------------- ---------------- ----------------",
            "-- ${1:1.0.0}                      ${2:JMVELEZ}         ${3:2025-01-15}       ${4:INITIAL CREATION}",
            "-- ----------- -------------- --------------- ---------------- ----------------",
            "---",
            "--",
            "-- OBJECT TYPE: PATCH",
            "-- OBJECT NAME: ${5:001_description}",
            "-- DESCRIPTION: ${6:Description of the patch}",
            "--",
            "",
            "DO $$",
            "BEGIN",
            "    RAISE NOTICE 'Starting patch ${5:001_description}...';",
            "END $$;",
            "",
            "-- ${7:SQL commands here}",
            "",
            "DO $$",
            "BEGIN",
            "    RAISE NOTICE 'Patch ${5:001_description} applied successfully';",
            "END $$;"
        ],
        "description": "SQL patch template with version header"
    }
}